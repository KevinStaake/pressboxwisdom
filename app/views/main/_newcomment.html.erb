<fieldset>
  <legend>Submit a comment:</legend>
<%= form_tag(:controller => "main", :action => "new_comment", :method => "get") do %>
  <p>
  <%= label_tag(:body, "Comment") %>
  <br/>
	<%= text_area_tag :body,nil, :rows => 5, :cols => 50 %>
  </p>
  <br/>
	<p>
	<input type="hidden" name="post" value="<%=post_id%>" />
	</p>
  <%= submit_tag("Submit") %>
<% end %>
</fieldset>
