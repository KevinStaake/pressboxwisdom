<% posts.each do |post|  %>
	<div  class="span-17">
		<div id="comment"  class="span-17">
			<div id="comment_title" class="span-10">
				<h3><b><%= post.title -%></b>
          <br/>
					<span id="author_info" class="alt">
            Submitted by <a href="/user/<%=post.user_id%>"> <%= post.user.preferred_name %></a>
						on <%= post.created_at.strftime("%m/%d/%Y") %>
					</span>
				</h3>
			</div>
		<div id="comment_body" class="span-17">
			"<%=post.post_body %>"
		</div>
		<div class="span-7">
			<div class="taglist">
				<ul>
					<% post.tags[0..5].each do |t| %>
            <li class="tag"><a href="/tagid/<%=t.id%>"> <%= t.tag %></a> </li>
					<% end %>
				</ul>
			</div>
		</div>
		</div>
	</div>
<% end %>
