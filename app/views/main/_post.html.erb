<% posts.each do |post|  %>
	<div id="comment" class="span-17">
		<div class="span-17">
			<div class="span-10">
				Submitted by <%= post.user.preferred_name %>
				on <%= post.created_at.strftime("%m/%d/%Y") %>
			</div>
		</div>
		<div id="comment_body" class="span-17">
			"<%=post.post_body %>"
		</div>
		<div class="span-7">
			<div class="taglist">
				<ul>
					<% post.tags[0..5].each do |t| %>
						<li class="tag"><%= t.tag %> </li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
<% end %>
